# GitHub Tools Aliases for Fish Shell
# Generated by thomsible github_tools role
# This file provides modern replacements for traditional commands

{% for tool_name in github_tools_to_install %}
{%   set tool_config = github_tools_available[tool_name] %}
{%   if tool_config.alias is defined %}
# {{ tool_config.description }}
alias {{ tool_config.alias }} "{{ target_user_home }}/local/bin/{{ tool_name }}"

{%   endif %}
{% endfor %}

# Additional useful aliases for enhanced tools
{% for tool_name in github_tools_to_install %}
{%   set tool_config = github_tools_available[tool_name] %}
{%   if tool_config.alias is defined %}
{%     if tool_name == 'bat' %}
# bat with paging disabled for small files
alias batcat "{{ target_user_home }}/local/bin/bat --paging=never"

{%     elif tool_name == 'eza' %}
# eza with common options
alias ll "{{ target_user_home }}/local/bin/eza -la --git"
alias la "{{ target_user_home }}/local/bin/eza -a"
alias lt "{{ target_user_home }}/local/bin/eza --tree"

{%     elif tool_name == 'rg' %}
# ripgrep with common options
alias rg "{{ target_user_home }}/local/bin/rg"
alias rgf "{{ target_user_home }}/local/bin/rg --files"
alias rgi "{{ target_user_home }}/local/bin/rg --ignore-case"

{%     elif tool_name == 'zoxide' %}
# zoxide smart cd with initialization
eval ({{ target_user_home }}/local/bin/zoxide init fish)

{%     elif tool_name == 'tealdeer' %}
# tealdeer aliases
alias tldr "{{ target_user_home }}/local/bin/tealdeer"
alias help "{{ target_user_home }}/local/bin/tealdeer"

{%     elif tool_name == 'dog' %}
# dog DNS lookup aliases
alias dog "{{ target_user_home }}/local/bin/dog"
alias dns "{{ target_user_home }}/local/bin/dog"

{%     endif %}
{%   endif %}
{% endfor %}

